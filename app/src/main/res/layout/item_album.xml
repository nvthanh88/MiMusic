<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    style="@style/Layout.FullWidth"    >
    <android.support.v7.widget.CardView
        android:id="@+id/albumCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/padding_small"
        android:elevation="3dp"
        app:cardCornerRadius="@dimen/padding_smaller">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgAlbumThumbnail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/album_cover"
                android:scaleType="fitXY"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"/>

            <TextView
                android:id="@+id/txtAlbumTile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgAlbumThumbnail"
                android:textSize="@dimen/text_small"/>

            <TextView
                android:id="@+id/txtAlbumSongs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtAlbumTile"
                android:textSize="@dimen/text_smaller"/>

            <ImageView
                android:id="@+id/imgOptions"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:src="@mipmap/ic_album_options"
                android:layout_below="@+id/imgAlbumThumbnail"
                android:scaleType="centerCrop"
                android:layout_alignParentRight="true"
                android:clickable="true"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>