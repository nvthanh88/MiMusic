<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    style="@style/Layout.FullWidth">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/card_view_height"
        android:layout_margin="@dimen/padding_small"
        android:elevation="3dp"
        app:cardCornerRadius="@dimen/padding_smaller">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fillAfter="false"
            android:layout_gravity="center_vertical"
            android:fillEnabled="false">
            <com.nvt.mimusic.wiget.CircleImageView
                android:id="@+id/imgSongThumbnail"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:layout_marginStart="@dimen/padding_normal" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_huger"
                >
                <TextView
                    android:id="@+id/txtSongTile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txtSongTileText"
                    android:textSize="@dimen/text_small"
                    />
                <TextView
                    android:id="@+id/txtArtistName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="@string/txtArtist"

                    android:textSize="@dimen/text_smaller"
                    />
            </LinearLayout>
            <ImageView
                android:id="@+id/songImgOptions"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:src="@mipmap/ic_album_options"
                android:layout_gravity="center_vertical"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>